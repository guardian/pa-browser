# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                      controllers.PAApi.index
POST        /browser               controllers.PAApi.browserSubstitution
GET         /browser/*query        controllers.PAApi.browser(query)
GET         /fixtures              controllers.PAApi.fixtures
GET         /table                 controllers.PAApi.leagueTable

GET         /team/head2head        controllers.GraphsController.chooseTeamsH2H
POST        /team/head2head        controllers.GraphsController.renderTeamsH2H

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file          controllers.Assets.at(path="/public", file)
